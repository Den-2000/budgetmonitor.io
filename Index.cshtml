@model test.Models.BudgetModel

@{
    ViewData["Title"] = "Personal Budget Monitor";
}

<h1>@ViewData["Title"]</h1>

<form method="post" asp-action="Index">
    <div>
        <label for="Income">Monthly Income</label>
        <input type="number" name="Income" value="@Model.Income" required />
    </div>

    <div>
        <label for="Expenses">Monthly Expenses</label>
        <input type="number" name="Expenses" value="@Model.Expenses" required />
    </div>

    <div>
        <label for="Savings">Savings Goal</label>
        <input type="number" name="Savings" value="@Model.Savings" required />
    </div>

    <button type="submit">Calculate</button>
</form>

@if (Model != null)
{
    <div>
        <h2>Remaining Balance: @Model.CalculateBalance()</h2>
    </div>
}